#!/bin/bash
UUID=$(id -u)
UUID=$(( UUID + 0 ))
I_OK="✔"
I_KO="✖️"
URLgithub="https://raw.githubusercontent.com/afimpel/alpine-linux/master"

NC='\e[0m'
if [ $UUID != 0 ]; then
        echo "${I_KO}    Start the Script as 'root' for it to work properly    ${I_KO}";
        exit 1;
else
    echo "${I_OK}    Configuring lightdm-gtk-greeter"
    wget --no-cache -O - ${URLgithub}/global/lightdm-gtk-greeter.conf > /etc/lightdm/lightdm-gtk-greeter.conf

    mkdir -p /usr/share/pixmaps/
    adduser $(getent passwd 1000 | cut -d: -f1) plugdev
    wget --no-cache -O - ${URLgithub}/global/github.desktop > /usr/share/applications/my-github.desktop
    wget --no-cache -O - ${URLgithub}/global/youtube.desktop > /usr/share/applications/my-youtube.desktop
    wget  -O - https://raw.githubusercontent.com/afimpel/upgrade-system-alpine/desktop/Desktop/cli.sh | sh

    wget --no-cache -O - ${URLgithub}/global/NetworkManager/NetworkManager.conf > /etc/NetworkManager/NetworkManager.conf 
    wget --no-cache -O - ${URLgithub}/global/NetworkManager/conf.d/any-user.conf > /etc/NetworkManager/conf.d/any-user.conf
    wget --no-cache -O - ${URLgithub}/global/security/audio.conf > /etc/security/limits.d/audio.conf

    echo "${I_OK}    Downloading ICONS"
    curl -L ${URLgithub}/global/youtube.svg > /usr/share/pixmaps/youtube.svg
    curl -L ${URLgithub}/global/github.svg > /usr/share/pixmaps/github.svg
    curl -L ${URLgithub}/global/youtube.png > /usr/share/pixmaps/youtube.png
    curl -L ${URLgithub}/global/github.png > /usr/share/pixmaps/github.png
    curl -L ${URLgithub}/global/alpine.png > /usr/share/pixmaps/alpine.png
    curl -L ${URLgithub}/global/afimpelelnerd.png > /usr/share/pixmaps/afimpelelnerd.png

    echo "${I_OK}    Downloading wallpapers"
    mkdir -p /usr/share/backgrounds
    wget --no-cache -O - ${URLgithub}/assets/wallpaper.jpg?raw=true > /usr/share/backgrounds/wallpaper.jpg
    wget --no-cache -O - ${URLgithub}/assets/wallpaper-1.jpg?raw=true > /usr/share/backgrounds/wallpaper-1.jpg
    wget --no-cache -O - ${URLgithub}/assets/wallpaper-2.jpg?raw=true > /usr/share/backgrounds/wallpaper-2.jpg
    wget --no-cache -O - ${URLgithub}/assets/wallpaper-3.jpg?raw=true > /usr/share/backgrounds/wallpaper-3.jpg
    wget --no-cache -O - ${URLgithub}/assets/wallpaper-4.jpg?raw=true > /usr/share/backgrounds/wallpaper-4.jpg

    echo "Install Date: $(date)" >> /etc/motd
    chmod 777 /usr/share/backgrounds/* -R
    chmod 777 /usr/share/pixmaps/* -R
    chmod 777 /usr/share/applications/my-* -R
fi