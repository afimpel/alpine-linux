#!/bin/bash
UUID=$(id -u)
UUID=$(( UUID + 0 ))
I_OK="✔"
I_KO="✖️"
URLgithub="https://raw.githubusercontent.com/afimpel/alpine-linux/master"

if [ $UUID != 1000 ]; then
    echo "${I_KO}    Start the Script as '$(getent passwd 1000 | cut -d: -f1)' for it to work properly    ${I_KO}";
    exit 1;
else
    echo "${I_OK}    Configuring user ..."
    mkdir -p ~/.config/rofi
    mkdir -p ~/.config/neofetch
    wget --no-cache -O - ${URLgithub}/global/neofetch.conf > ~/.config/neofetch/config.conf
    wget --no-cache -O - ${URLgithub}/global/rofi.rasi > ~/.config/rofi/config.rasi
    wget --no-cache -O - ${URLgithub}/global/bashrc > ~/.bashrc
    wget --no-cache -O - ${URLgithub}/global/Xdefaults > ~/.Xdefaults
    wget --no-cache -O - ${URLgithub}/global/Xresources > ~/.Xresources
    wget --no-cache -O - ${URLgithub}/global/github.desktop > ~/my-github.desktop
    wget --no-cache -O - ${URLgithub}/global/youtube.desktop > ~/my-youtube.desktop
    chmod 777 ~/my-* -R
fi